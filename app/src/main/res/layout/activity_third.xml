<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".thirdActivity">

    <TextView
            android:text="Taille en cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Poids en kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/graphiqueView" android:layout_marginStart="82dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"/>
    <TextView
            android:text="Sous-poids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/graphiqueView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="#0000FF" android:textColor="@color/white"/>
    <TextView
            android:text="Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="#00FF00" android:textColor="@color/black"/>
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="@color/teal_700"/>
    <com.jjoe64.graphview.GraphView
            android:layout_width="404dp" android:layout_height="491dp"
            android:id="@+id/graphiqueView"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="12dp"/>
    <TextView
            android:text="Obèsité"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="126dp" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:background="#FF0000" android:textColor="#000000" android:layout_marginEnd="175dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Surpoids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/graphiqueView" android:layout_marginStart="102dp"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:background="#FFFF00"
            android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>